<panel>
    <layout class="stick_to_sides_attachment" apply_to_children="true"/>
    <container>
        <attachment class="vertical_arrange" vertical_layout="-2,-5,-2" vertical_gap="5" vertical_offset="10"/>
        <container>
            <attachment class="vertical_arrange" vertical_layout="-1,-1" vertical_gap="0"/>
            <widget class="fixture_opponent_team_button" icon_enabled="false" show_button_appearance="false" size="8" font="lcsb" alignment="centre_x,bottom,can_scale" colour="text">
                <record id="object_property" dont_set_hint="true">
                    <integer id="get_property" value="fopt"/>
                    <integer id="set_property" value="valu"/>
                </record>
            </widget>
            <widget class="fixture_venue_label" format="1" colour="title" font="lcsb" size="8" alignment="centre_x,top,can_scale">
                <record id="object_property" dont_set_hint="true">
                    <integer id="get_property" value="FxVn"/>
                    <integer id="set_property" value="valu"/>
                </record>
            </widget>
        </container>
        <widget class="fixture_opponent_picture" id="fopP" scale_picture="true">
            <boolean id="keep_aspect_ratio" value="true"/>
            <flags id="image_alignment" value="centre"/>
            <record id="object_property">
                <list id="get_properties">
                    <record><integer id="get_property" value="fopP"/>
                        <boolean id="dont_set_object" value="true"/>
                    </record>
                    <record>
                        <integer id="get_property" value="text"/>
                        <boolean id="dont_set_object" value="true"/>
                        <string id="set_property" value="hint"/>
                    </record>
                </list>
            </record>
        </widget>
        <container><attachment class="vertical_arrange" vertical_layout="-1,-1" vertical_gap="0"/>
            <widget class="game_formatted_label" format="([%comp#1-3letter])" colour="title" font="lcsb" size="8" alignment="centre_x,top,can_scale">
                <record id="object_property" get_property="fxCo" set_property="var1"/>
            </widget>
            <widget class="text" id="time" size="8" font="lcsb" alignment="centre_x,top" colour="text"/>
        </container>
    </container>
</panel>
