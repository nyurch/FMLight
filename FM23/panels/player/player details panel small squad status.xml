<panel>
	<string id="skin_style" value="person_button"/>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

	<list id="properties_to_forward">
		<record get_property="ISTu" set_property="hidden" target="play"/>
	</list>

	<container id="staf">
		<layout class="arrange_horizontal_attachment" layout="40, -1" gap="8"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

		<!-- Portrait -->
		<widget class="object_portrait_picture" scale_picture="true" image_alignment="centre">
			<record id="object_property" get_property="objt" set_property="objt"/>
		</widget>

		<container>
			<layout class="arrange_vertical_attachment" alignment="middle" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true"/>

			<!-- Person name -->
			<widget class="person_button" alignment="left,centre_y" style="semi_bold" info_popup_enabled="true" info_popup_alignment="left,centre_y" icon_enabled="true" person_is_player="true" auto_size="vertical">
				<record id="object_property" get_property="Pcjo" set_property="Pcjo"/>
				<record id="object_property" get_property="objt" set_property="valu"/>
			</widget>

			<!-- text label -->
			<widget class="playing_time_label" id="play" alignment="left,top" size="small" colour="faded text" auto_size="vertical">
				<record id="object_property" get_property="Pcpt"/>
			</widget>
		</container>
	</container>
</panel>