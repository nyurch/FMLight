<panel>
	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0"/>

	<boolean id="is_in_inbox" value="true"/>
	<string id="skin_style" value="subtle box"/>

	<container class="inner_subtle_box" red_replacement="green">
		<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_layout="110,-4,-6" horizontal_offset="6" vertical_offset="0"/>

		<string id="skin_style" value="contrast box"/>
		<!-- placing -->
		<container background_colour="gold" height="26" width="26" embed_in_frame="true">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" embed_in_frame="true"/>
			<layout class="stick_to_sides_attachment" alignment="left,top" inset="0" embed_in_frame="true"/>

			<widget class="label" id="posl" alignment="centre,can_scale" colour="black" size="12" style="bold" embed_in_frame="true" auto_size="none"/>
		</container>

		<!-- Player Picture -->
		<widget class="competition_news_image_panel" id="ptpc" height="80"/>

		<widget class="table" id="pitb" layout="18,-1" row_height="22" auto_size="vertical" all_content_same_height="true" row_spacing="1">
			<list id="column_table_properties">
				<record index="0" right="20"/>
			</list>

			<!-- Name -->
			<widget class="person_button" id="apfn" col="0" row="0" style="bold" column_span="2"/>

			<!-- Club -->
			<widget class="team_button" id="apcb" col="1" row="1" icon_enabled="false" colour="faded text"/>

			<!-- Age -->
			<widget class="text" id="apag" col="1" row="2" colour="faded text"/>

			<!-- Matches -->
			<widget class="text" id="apga" col="1" row="3" colour="faded text"/>

			<!-- Win ratio -->
			<widget class="text" id="apwr" col="1" row="4" colour="faded text"/>

			<!-- Manager points -->
			<widget class="text" id="apmp" col="1" row="5" colour="faded text"/>
		</widget>

		<widget class="club_overview_team_results_panel" id="cotr" height="140" file="club/club overview team adaptive results panel" show_link="false"/>
	</container>

</panel>
