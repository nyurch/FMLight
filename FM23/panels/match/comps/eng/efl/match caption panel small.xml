<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<!--Alternate UI mode-->
	<integer id="alSM" value="5" />

	<!--Alternating Colour 1-->
	<colour id="alt1" red="255" green="255" blue="255" alpha="191" />
	<!--Alternating Colour 2-->
	<colour id="alt2" red="222" green="222" blue="222" alpha="191" />

	<container>
		<attachment_group class="vertical_arrange" vertical_alignment="bottom" vertical_offset="0" vertical_gap="0" horizontal_alignment="left" horizontal_inset="0"/>

		<container id="deLA" class="client_object_viewer_xml_panel"  height="70" >
			<attachment_group class="vertical_arrange" vertical_layout="40,30" vertical_offset="0" vertical_gap="0"/>

			<container class="contrast_box" id="plCO" appearance="boxes/custom/efl/lower thirds/top/paper">
				<attachment_group class="horizontal_arrange_autosize" />

				<container id="TeaC" class="client_object_viewer_xml_panel">
					<attachment_group class="vertical_arrange_horizontal_autosize" />
					<widget class="object_portrait_picture" height="24" width="24" id="TeaB">
						<string id="scale_picture" value="true" />
						<string id="image_alignment" value="centre" />
						<boolean id="keep_aspect_ratio" value="true" />
						<boolean id="clickable" value="false" />
						<record id="object_property">
							<integer id="get_property" value="objt" />
							<integer id="set_property" value="valu" />
						</record>
					</widget>
				</container>
				<widget class="text" alignment="left" auto_size="horizontal" id="PlTn">
					<string id="size" value="regular" />
					<string id="font" value="efl bold" />
					<string id="multiline" value="true" />
				</widget>
				<widget class="text" alignment="left" id="PlTx" auto_size="horizontal" auto_size_minimum_width="200">
					<string id="size" value="regular" />
					<string id="font" value="efl bold" />
					<string id="multiline" value="false" />
				</widget>
				<widget class="picture" id="subN" hidden="true" scale_picture="true" width="20" height="20" file="boxes/custom/efl/lower thirds/sub on/paper">
					<string id="image_alignment" value="right" />
				</widget>
			</container>

			<container class="contrast_box" id="inCO" appearance="boxes/custom/efl/lower thirds/bottom/paper" red_replacement="white">
				<attachment_group class="horizontal_arrange_autosize" />
				<widget class="picture" id="crdP" hidden="true" scale_picture="true" width="25" height="25"  >
					<string id="image_alignment" value="right" />
				</widget>
				<widget class="text" alignment="left" auto_size="horizontal" id="AcTx">
					<string id="size" value="regular" />
					<string id="font" value="efl regular" />
					<string id="multiline" value="false" />
				</widget>
				<widget class="text" alignment="left" id="AcTs" auto_size="horizontal">
					<string id="size" value="regular" />
					<string id="font" value="efl regular" />
					<string id="multiline" value="false" />
				</widget>
				<widget class="picture" id="subF" hidden="true" scale_picture="true" width="20" height="20" file="boxes/custom/efl/lower thirds/sub off/paper" >
					<string id="image_alignment" value="right" />
				</widget>
			</container>

		</container>
	</container>

</panel>