<panel width="140">
<layout class="arrange_vertical_attachment" layout="-1, 60" offset="2" gap="8"/><layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="2"/>

<container>
	<layout class="arrange_vertical_attachment" alignment="bottom,extend" gap="2" offset="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true"/>
	
		<container>
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
		
		<widget class="picture" id="" file="pictures/trophies/default/shadow" image_alignment="centre_x,bottom" scale_picture="true" keep_aspect_ratio="true">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" />
		</widget>
		<widget class="object_portrait_picture" id="trop" scale_picture="true">
			<integer id="property" value="trop"/>
			<boolean id="keep_aspect_ratio" value="true"/>
			<boolean id="comp_use_trophy_icon" value="true"/>
			<flags id="image_alignment" value="centre_x,bottom"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>
		</widget>
		
		</container>
</container>

<container class="main_contrast_box" red_replacement="primary">
	<attachment_group class="vertical_arrange" vertical_alignment="top,extend" vertical_gap="0"/>
	<widget class="text" id="wcnt" alignment="centre" size="large" colour="secondary" style="bold" auto_size="vertical" />
	<widget class="comp_button" id="cmpn" multiline="true" auto_size="vertical" alignment="centre_x,top" icon_enabled="true" colour="secondary" size="xxsmall"/>
</container>

</panel>