<panel>
<string id="skin_style" value="text" />
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

		<container>
			<attachment_group class="vertical_arrange" vertical_gap="0" vertical_offset="0"/>

			<container height="20">
				<attachment_group class="horizontal_arrange" horizontal_alignment="middle"/>
				<widget class="client_object_property_panel" property="PinD" width="20">
					<record id="object_property" get_property="objt" set_property="objt" />
					<record id="widget_properties">
						<flags id="label_disabled" value="true" />
					</record>
				</widget>


			</container>

			<container  height="50">
				<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

					<widget class="tactics_kit_picture" id="kitp">
					<layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
				</widget>

				<container>
					<attachment_group class="horizontal_arrange" horizontal_layout="-1,50,-1" horizontal_gap="0"/>

					<container>
						<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
						<widget class="picture" file="icons/16px/assist" id="asst" image_alignment="right" scale_picture="false" hidden="true" />
					</container>
					
					<container/>
					<container class="goal_icon" id="goal" icon_alignment="left" navigation_focus_target="false">
					</container>
				</container>


			</container>
			
		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_gap="0" vertical_offset="0"/>

			<widget class="text" id="name" auto_size="vertical" colour="red" alignment="centre, can_scale" multiline="false" style="semi_bold">
				<layout class="centre_in_parent_attachment" alignment="horizontal"/>
			</widget>

			<widget class="match_rating_label_formatted" id="avra" auto_size="all" alignment="centre" format="[%fraction#1-2.1]" navigation_focus_target="false" hidden="true">
				<layout class="centre_in_parent_attachment" alignment="horizontal"/>
			</widget>

		</container>

		</container>


</panel>
