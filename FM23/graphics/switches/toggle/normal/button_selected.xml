<!-- image properties -->
<properties>

	<!-- image borders -->
	<!-- these determine how many pixels any content is inset from each side of the image -->
	<!-- (for example, in the case of a button, the content would be the text label) -->
	<record id="image_borders" left="12" right="12" top="4" bottom="6"/>

	<!-- image slices determine the points at which the image will be sliced to enable scaling -->
	<!-- the image will only slice in the directions slicing values are provided for-->
	<record id="image_slices" left="13" right="13"/>
	
	<record id="font_spec">
		<flags id="font" value="fonts/button"/> 
		<flags id="colour" value="white"/> 
	</record>
	
	<colour id="red_replacement" name="white"/>
	<colour id="green_replacement" name="primary_button"/>
	<colour id="blue_replacement" name="bg accent"/>

	<record id="primary_icon_properties" red_replacement="white" green_replacement="red"/>
	<record id="secondary_icon_properties" red_replacement="white" green_replacement="red"/>
	
</properties>
