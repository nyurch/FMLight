<!-- image properties -->
<!-- changed fg to pbt -->
<properties>

	<!-- image borders -->
	<!-- these determine how many pixels any content is inset from each side of the image -->
	<!-- (for example, in the case of a button, the content would be the text label) -->
	<record id="image_borders" left="15" right="15" top="4" bottom="6"/>

	<!-- image slices determine the points at which the image will be sliced to enable scaling -->
	<!-- the image will only slice in the directions slicing values are provided for-->
	<record id="image_slices" left="13" right="13"/>
	
	<record id="font_spec">
		<flags id="font" value="fonts/primary_button"/> 
		<flags id="colour" value="primary_button_text"/> 
	</record>
	
	<colour id="red_replacement" name="primary_button"/>
	<colour id="green_replacement" name="primary_button"/>
	<colour id="blue_replacement" name="black"/>

	<record id="primary_icon_properties" red_replacement="primary_button_text" green_replacement="primary_button"/>
	<record id="secondary_icon_properties" red_replacement="primary_button_text" green_replacement="primary_button"/>

	<symbol id="focus_appearance" value="buttons/standard/normal/button_controller" />
	
</properties>
