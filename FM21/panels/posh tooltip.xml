<panel>
<!-- changed text from white to hint -->

	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
	<layout class="fit_children_attachment" alignment="all" offset="0"/>

	<container class="main_box" appearance="boxes/hints/standard/paper">
		<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="5"/>
		<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="5"/>
		<layout class="centre_in_parent_attachment" alignment="horizontal" apply_to_children="true" />
		<layout class="fit_children_attachment" alignment="horizontal" offset="0"/>

		<widget class="text" id="titl" colour="hint" auto_size="all" auto_size_maximum_width="400" font="semibold" alignment="centre"/>
		<widget class="text" id="body" colour="hint" auto_size="all" auto_size_maximum_width="400" alignment="centre"/>
	</container>
</panel>
