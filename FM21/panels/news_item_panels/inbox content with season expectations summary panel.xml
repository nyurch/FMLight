<panel>
	<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal,top" apply_to_children="true" inset="0"/>

	<container>
		<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0"/>
		<layout class="arrange_horizontal_attachment" layout="-1,-1" offset="0" gap="8"/>
		<layout class="stick_to_sides_attachment" alignment="top" apply_to_children="true" inset="0"/>

		<container id="infc" class="inner_subtle_box" background_colour="grey 300">
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="10" horizontal_alignment="horizontal"  />

			<container>
				<attachment_group class="vertical_arrange_autosize" horizontal_alignment="left"  />

				<string id="skin_style" value="title link"/>

				<widget class="link_button" id="cmlk" auto_size="all">
					<translation id="text" translation_id="227741" type="use" value="Competitions"/>
				</widget>
			</container>

			<!-- additional information boxes will be added to this container -->
		</container>

		<container class="inner_box" background_colour="grey 300">
			<attachment_group class="vertical_arrange_autosize" horizontal_alignment="left" />

			<string id="skin_style" value="title link"/>

			<widget class="link_button" id="tblk" auto_size="all" >
				<translation id="text" translation_id="383268" type="use" value="Budgets[COMMENT: Finances panel]"/>
			</widget>

			<widget class="label" auto_size="all" font="label" colour="faded text">
				<translation id="text" translation_id="291309" type="use" value="Transfer Budget[COMMENT:Transfer budget label]"/>
			</widget>

			<widget class="label" id="tblb" alignment="left" font="value" auto_size="all">
				<layout class="stick_to_sides_attachment" alignment="left" inset="8"/>
			</widget>

			<widget class="label" id="wblk" auto_size="all" font="label" colour="faded text">
				<translation id="text" translation_id="242605" type="use" value="Wage Budget"/>
			</widget>

			<widget class="wage_label" id="wblb" alignment="left" font="value" auto_size="all">
				<layout class="stick_to_sides_attachment" alignment="left" inset="8"/>
			</widget>

			<widget class="inbox_body_text" id="adtx" size="small" colour="faded text">
				<layout class="stick_to_sides_attachment" alignment="horizontal"/>
			</widget>
		</container>
	</container>

</panel>
