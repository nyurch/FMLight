<panel>
	<colour id="shirt_reassignment_colour" name="attention"/>

	<layout class="arrange_vertical_attachment" layout="-1, 1" offset="0" gap="2"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

	<container>
		<layout class="arrange_horizontal_attachment" alignment="left,extend" offset="0"/>

		<widget class="numbered_kit_picture" id="nmkt" kit_number="0" scale_picture="true" keep_aspect_ratio="true" width="40" image_alignment="centre">
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>
		</widget>

		<container>
			<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" do_not_size="true"/>
			<layout class="centre_in_parent_attachment" alignment="vertical" />
			<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="0" />
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

			<widget class="person_button" id="plnm" style="bold" auto_size="vertical" colour="black" />
			<widget class="text" id="shst" colour="faded text" auto_size="vertical" />
		</container>
	</container>

	<widget class="horizontal_divider" />
</panel>