<panel >
	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0" />

	<container class="inner_box_no_margin" id="cbox">
		<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="left,extend" vertical_offset="0" />

		<!-- some pictures -->
		<widget class="object_portrait_picture" id="plpc" height="70" width="70" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre" />
		
		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_gap="0" horizontal_alignment="horizontal" horizontal_inset="0" />

			<!-- person name -->
			<widget class="person_button" id="pnam" style="semi_bold" alignment="left,centre_y" size="10" auto_size="vertical" colour="black"/>

			<!-- person description -->
			<widget class="label" id="ppos" spec="text" colour="text" alignment="left,centre_y" size="10" auto_size="vertical"/>

			<!-- person nationality -->
			<widget class="nation_button" id="Pnat" spec="text" colour="text" alignment="left,centre_y" size="10" auto_size="vertical">
				<record id="object_property" get_property="Pnat"/>
			</widget>
		</container>
	</container>

</panel>