        <attachment_group class="vertical_arrange_autosize" horizontal_alignment="horizontal"/>

        <widget class="label" auto_size="vertical" spec="text" font="title" alignment="centre" colour="faded text">
            <translation id="text" translation_id="295152" type="use" value="Player Stats[comment: option that appears on the competition context menu]"/>
        </widget>

        <widget class="table" layout="-1, -1, -1, -1" mode="" auto_size="vertical" fixed_size_rows="true" row_height="20" row_spacing="0">
            <record id="object_property">
                <integer id="get_property" value="objt"/>
                <integer id="set_property" value="objt"/>
            </record>
            <record id="default_properties" auto_size="none" colour="text" alignment="centre"/>

            <widget class="appearances_label" size="10" style="bold" row="0" col="0">
                <record id="object_property">
                    <integer id="get_property" value="Poap"/>
                    <integer id="set_property" value="valu"/>
                </record>
            </widget>
            <widget class="dashed_number_label" size="10" style="bold" row="0" col="1">
                <record id="object_property">
                    <integer id="get_property" value="Pogl"/>
                    <integer id="set_property" value="valu"/>
                </record>
            </widget>
            <widget class="dashed_number_label" size="10" style="bold" row="0" col="2">
                <record id="object_property">
                    <integer id="get_property" value="Poas"/>
                    <integer id="set_property" value="valu"/>
                </record>
            </widget>
            <widget class="dashed_number_label" size="10" style="bold" row="0" col="3">
                <record id="object_property">
                    <integer id="get_property" value="Poav"/>
                    <integer id="set_property" value="valu"/>
                </record>
            </widget>

            <widget class="label" spec="text" row="1" col="0">
                <translation id="text" translation_id="227844" type="use" value="Apps[comment - Appearances]"/>
                <translation id="hint" translation_id="227845" type="use" value="Appearances"/>
            </widget>
            <widget class="label" spec="text" row="1" col="1">
                <translation id="text" translation_id="252894" type="use" value="Goals[COMMENT: team stat overall goals scored, short title]"/>
            </widget>
            <widget class="label" spec="text" row="1" col="2">
                <translation id="text" translation_id="249414" type="use" value="Assists[COMMENT: player stat: assists table label]"/>
            </widget>
            <widget class="label" spec="text" row="1" col="3">
                <translation id="text" translation_id="227852" type="use" value="Av Rat[comment - Average rating]"/>
