<panel>
    <attachment_group class="vertical_arrange_autosize" vertical_alignment="top" vertical_gap="0" vertical_inset="0"/>

    <boolean id="should_force_refresh" value="true"/>

    <container height="60">
        <attachment_group class="vertical_arrange_autosize" vertical_alignment="top" vertical_gap="0" vertical_inset="0"/>

        <container height="35">
            <attachment_group class="horizontal_arrange" horizontal_layout="30, -1" horizontal_gap="8" vertical_offset="0"/>

            <!-- portrait -->
            <container>
                <attachment_group class="horizontal_arrange_vertical_autosize" vertical_inset="0" vertical_offset="0" horizontal_inset="0" horizontal_offset="0"/>

                <!-- portrait -->
                <widget class="object_portrait_picture" width="30" height="30" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre">
                    <record id="object_property">
                        <integer id="get_property" value="Pers"/>
                        <boolean id="dont_set_object" value="true"/>
                        <boolean id="dont_set_hint" value="true"/>
                    </record>
                    <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
                </widget>

                <!-- currently speaking icon? -->
                <widget class="picture" id="talk" file="icons/custom/quick chat/quick_chat_speaking_mask_square_small" scale_picture="true" keep_aspect_ratio="true" width="30" height="30" image_alignment="centre" red_replacement="purple" hidden="true">
                    <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
                </widget>
            </container>

            <container height="35">
                <attachment_group class="vertical_arrange_autosize" vertical_layout="-1, -1" vertical_inset="0" vertical_offset="0" vertical_gap="0" horizontal_inset="0" horizontal_offset="0"/>

                <!-- name -->
                <widget class="person_button" colour="black" id="perb" size="medium" style="bold" alignment="left, centre_y" auto_size="horizontal" height="15" info_popup_enabled="true" person_is_non_player="true"/>

                <!-- job -->
                <widget class="job_label" alignment="left" size="small" colour="faded text" auto_size="none" height="20">
                    <record id="object_property" get_property="PcJj" set_property="valu"/>
                </widget>
            </container>
        </container>

        <!-- reactions -->
        <widget class="interaction_reaction_label" id="bdlg" show_button_appearance="true" wants_mouse_events="false" appearance="boxes/custom/reactions/neutral/paper" style="bold" height="25" hidden="true"/>
    </container>
</panel>