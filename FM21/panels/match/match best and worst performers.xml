						<widget class="position_label" id="Pps1" alignment="left,centre_y" colour="faded text" size="small" auto_size="vertical">
							<record id="object_property" get_property="Pmjp"/>
						</widget>

						<widget class="adaptive_match_player_summary" id="PpS1" alignment="left,centre_y" height="20">
							<record id="object_property" get_property="PpSP"/>
						</widget>

					</container>

				</container>

				<widget class="text" id="bPaN" alignment="centre" auto_size="vertical">
					<string id="text" value="-"/>
				</widget>
			</container>
		</container>

		<container/>

		<widget class="link_button_title" id="wpln" section="mapl" auto_size="horizontal" alignment="centre" font="title" colour="negative" red_replacement="negative" blue_replacement="negative">
