<panel height="76">
	<layout class="arrange_vertical_attachment" alignment="middle" offset="0" gap="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true"/>

	<widget class="person_button" id="plyw" style="semi_bold"  colour="black" auto_size="vertical" multiline="false"/>

	<widget class="age_label" id="Page" auto_size="vertical" colour="faded text">
		<translation id="format" translation_id="242551" type="use" value="[%number#1] years old"/>
		<record id="object_property">
			<integer id="get_property" value="Page"/>
		</record>
	</widget>

	<widget class="text" id="trtw" auto_size="vertical" multiline="false"/>

	<container>
		<layout class="arrange_vertical_attachment" alignment="top" offset="0"/>
		<layout class="fit_children_attachment" alignment="vertical,fill" offset="0"/>
		<layout class="stick_to_sides_attachment" alignment="left" inset="0" apply_to_children="true"/>

		<widget class="link_appearance_button" id="TTlk" click_event="TTlk" red_replacement="positive">
			<translation id="text" translation_id="417864" type="use" value="Transfer target[COMMENT: FR17053 - title for a box containing info on a player being looked at by a club]"/>
		</widget>

		<widget class="link_appearance_button" id="DLlk" click_event="DLlk" red_replacement="positive">
			<translation id="text" translation_id="337876" type="use" value="Development List[COMMENT: human section; panel for showing current transfer targets, development list is a shortlist designed to include young players for the future rather than the present, a watch list of sorts]"/>
		</widget>

		<widget class="link_appearance_button" id="ULlk" click_event="ULlk" red_replacement="positive">
			<translation id="text" translation_id="336073" type="use" value="Unwanted List[COMMENT: transfer lists; type of transfer list, used for getting rid of players in your squad]"/>
		</widget>
	</container>
</panel>
