<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

	<widget class="text" alignment="centre" id="norp" multiline="true" colour="text" font="bold">
		<string id="text" value="-" />
	</widget>

	<widget class="link_button" id="lnkb" section="Pssr" alignment="left,centre_y" appearance="buttons/custom/over state only/button"  hidden="true" navigation_focus_target="false"/>

	<container id="rpco" hidden="true">
		<layout class="arrange_vertical_attachment" alignment="middle" offset="0"  />
		<layout class="centre_in_parent_attachment" alignment="horizontal" apply_to_children="true" offset="0" />

		<container height="32" width="32" navigation_focus_target="false">
			<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

			<widget class="picture" id="icon" file="icons/48px/grade" blue_replacement="white" image_alignment="centre" keep_aspect_ratio="true" scale_picture="true" wants_mouse_events="false" />

			<widget class="text" id="rcVL" alignment="centre" style="semi_bold, shadowed" wants_mouse_events="false" colour="background"/>

		</container>

		<container class="main_box" appearance="boxes/custom/scouting knowledge/paper" height="12" width="55" id="hbar">
			<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

			<widget class="horizontal_percentage_bar" id="hpbr" height="4" bar_value_colour="knowledge level" show_label_on_bar="false" label_width="0" appearance="charts/bar/custom/knowledge">
				<layout class="centre_in_parent_attachment" alignment="vertical" />
				
			</widget>
		</container>

	</container>

	<widget class="picture" id="arrw" file="icons/16px/advice link" image_alignment="right" hidden="true" />


</panel>