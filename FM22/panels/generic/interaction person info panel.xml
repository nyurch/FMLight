<panel>
    <attachment_group class="vertical_arrange_autosize" vertical_alignment="top" vertical_gap="0" vertical_inset="0"/>

    <boolean id="should_force_refresh" value="true"/>

    <container class="bordered_box_no_margin" appearance="boxes/popup/standard/paper" height="65">
        <attachment_group class="vertical_arrange_autosize" vertical_alignment="top" vertical_gap="0"/>

        <container height="40">
            <attachment_group class="horizontal_arrange_vertical_centre" horizontal_layout="30, -1" horizontal_gap="8" vertical_offset="0"/>

            <container>
                <attachment_group class="horizontal_arrange_vertical_autosize" vertical_inset="0" vertical_offset="0" horizontal_inset="0" horizontal_offset="0"/>

                <!-- portrait -->
                <widget class="object_portrait_picture" width="40" height="40" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre">
                    <record id="object_property">
                        <integer id="get_property" value="Pers"/>
                        <boolean id="dont_set_object" value="true"/>
                        <boolean id="dont_set_hint" value="true"/>
                    </record>
                    <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
                </widget>
            </container>

            <container height="40">
                <attachment_group class="vertical_arrange" vertical_alignment="fill" vertical_offset="2" vertical_gap="0" horizontal_alignment="horizontal"/>

                <!-- name -->
                <widget class="person_button" colour="black" id="perb" size="small" style="bold" alignment="left, centre_y" auto_size="all" info_popup_enabled="true" person_is_player="false"/>
            </container>
        </container>

        <!-- player morale/reactions -->
        <widget class="interaction_reaction_label" id="bdlg" show_button_appearance="true" wants_mouse_events="false" appearance="buttons/custom/network game/button" style="bold" height="25" hidden="true"/>
    </container>
</panel>