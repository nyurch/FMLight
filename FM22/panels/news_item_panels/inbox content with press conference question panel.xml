<panel>
    <attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="8" vertical_alignment="top" horizontal_inset="0" />

    <widget class="text" id="Rtit" font="title" size="large" colour="text" alignment="left, centre_y" auto_size="all" />

    <container>
        <attachment_group class="horizontal_arrange_vertical_autosize" horizontal_layout="220, -1" />

        <container>
            <attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="0" vertical_alignment="top" horizontal_inset="0" horizontal_offset="0" />
            
            <container class="interaction_featured_object_container" id="FObP" width="220" show_dynamic_image="true">
                <layout class="stick_to_sides_attachment" alignment=" top" inset="0" />
            </container>
        </container>

        <container class="main_transparent_box">
            <attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="8" vertical_alignment="top" horizontal_inset="0" />

            <!-- question -->
            <container class="inner_subtle_box" appearance="boxes/custom/quick chat/ai_quick_chat_speech_bottom" red_replacement="primary_button">
                <attachment_group class="vertical_arrange_autosize" />

                <widget class="text" id="queb" colour="white" auto_size="vertical" />
            </container>

            <widget class="interaction_person_info_panel" id="Jinf" is_in_inbox="true" interaction_person_type="journo" hide_info_hint="true" width="400" />

            <widget class="horizontal_divider">
                <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />
            </widget>

            <!-- scope/influence -->
            <widget class="text" font="label" alignment="left, centre_y" auto_size="all">
                <translation id="text" translation_id="515046" type="use" value="Influence[COMMENT: AREA: Inbox; SUB-AREA: Press Conference Invite News Item; FR: 32643; TONE: Formal; CHARLIMIT: None; REF-ID: n/a; NOTE: column header for a journalists global influence]" />
            </widget>
            <widget class="media_source_scope_label_with_icon" alignment="left, centre" size="medium" height="22">
                <record id="object_property" get_property="objt" set_property="objt" />
            </widget>

            <widget class="horizontal_divider">
                <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />
            </widget>

            <!-- relationship -->
            <widget class="text" font="label" alignment="left, centre_y" auto_size="all">
                <translation id="text" translation_id="308637" type="use" value="Relationship[COMMENT: Relationship towards the human player]" />
            </widget>
            <widget class="relationship_label_with_icon" dspf="2" size="medium" alignment="left, centre" height="22">
                <record id="object_property" get_property="JRel" set_property="valu" />
            </widget>

            <widget class="horizontal_divider">
                <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />
            </widget>

            <!-- personality -->
            <widget class="text" font="label" alignment="left, centre_y" auto_size="all">
                <translation id="text" translation_id="247713" type="use" value="Personality" />
            </widget>
            <widget class="journalist_label" id="Pers" display_format="0" spec="text" alignment="left, centre_y" auto_size="all">
                <record id="object_property" get_property="JCha" set_property="valu" />
            </widget>
        </container>
    </container>

</panel>