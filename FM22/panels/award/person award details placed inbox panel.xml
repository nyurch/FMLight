<panel>

	<string id="skin_style" value="subtle box"/>

	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0" />

	<boolean id="is_in_inbox" value="true"/>

	<container class="inner_subtle_box" red_replacement="black">
		<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_layout="130,-1" horizontal_offset="6" vertical_offset="6" />

		<!-- placing -->
		<container class="inner_box" background_colour="fg" height="28" width="28" embed_in_frame="true">
			<layout class="stick_to_sides_attachment" alignment="all" inset="1" apply_to_children="true" embed_in_frame="true" />
			<layout class="stick_to_sides_attachment" alignment="left,top" inset="0" embed_in_frame="true" />

			<widget class="label" id="posl" alignment="centre" colour="bg" style="bold" size="12" embed_in_frame="true" auto_size="none"/>
		</container>

		<!-- Player Picture -->
		<widget class="competition_news_image_panel" id="ptpc" height="80" />

		<widget class="table" id="pitb" layout="18,-1" auto_size="vertical" row_height="24" row_spacing="1" sort_disabled="true">

			<list id="column_table_properties">
				<record index="1" left="0"/>
			</list>

			<!-- Name -->
			<widget class="person_button" id="apfn" col="0" row="0" style="bold" column_span="2"/>

			<!-- Club -->
			<widget class="team_button" id="apcb" col="1" row="1" icon_enabled="false" colour="faded text" navigation_focus_target="true"/>

			<!-- Nation -->
			<widget class="nation_button" id="apna" col="1" row="2" icon_enabled="false" alignment="left,centre_y" colour="faded text"/>

			<!-- Position -->
			<widget class="position_label" id="appo" col="1" row="3" alignment="left,centre_y" colour="faded text" navigation_focus_target="false"/>

			<!-- Average Rating -->
			<widget class="label" id="apav" col="1" row="4" colour="faded text"/>

			<!-- Goals -->
			<widget class="label" id="apgl" col="1" row="5" colour="faded text"/>

			<!-- Assists -->
			<widget class="label" id="apas" col="1" row="6" colour="faded text"/>
			
			<!-- Conceded -->
			<widget class="label" id="apco" col="1" row="7" colour="faded text"/>

			<!-- Clean Sheets -->
			<widget class="label" id="apcs" col="1" row="8" colour="faded text"/>
			
			<!-- Votes -->
			<widget class="label" id="apvo" col="1" row="9" colour="faded text"/>
		</widget>
	</container>

</panel>
